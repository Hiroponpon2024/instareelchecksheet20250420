    </div>

    <footer>
        <p>&copy; 2023 インスタリール制作チェックリスト</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = document.querySelectorAll('.checklist-section');
            const progressBar = document.getElementById('progressBar');
            const allCheckboxes = document.querySelectorAll('.custom-checkbox');
            const totalItems = 55; // Updated total number of items

            // Function to update progress bar
            const updateProgress = () => {
                const checkedCount = document.querySelectorAll('.custom-checkbox.checked').length;
                const progressPercentage = totalItems > 0 ? (checkedCount / totalItems) * 100 : 0;
                progressBar.style.width = `${progressPercentage}%`;
            };

            // Accordion functionality
            sections.forEach(section => {
                const header = section.querySelector('.section-header');
                const content = section.querySelector('.section-content');
                const toggle = section.querySelector('.section-toggle');

                header.addEventListener('click', () => {
                    const isOpen = section.classList.contains('open');
                    // Toggle current section
                    if (isOpen) {
                        section.classList.remove('open');
                        content.style.display = 'none';
                        toggle.textContent = '▼';
                    } else {
                        section.classList.add('open');
                        content.style.display = 'block';
                        toggle.textContent = '▲';
                         // Scroll section into view if needed, slight offset for header/progress bar
                         setTimeout(() => {
                            const headerOffset = 80; // Adjust as needed
                            const elementPosition = section.getBoundingClientRect().top;
                            const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                             window.scrollTo({
                                top: offsetPosition,
                                behavior: "smooth"
                            });
                        }, 300); // Delay slightly for animation
                    }
                });
            });

            // Checkbox functionality & Local Storage
            allCheckboxes.forEach(checkbox => {
                const itemId = checkbox.getAttribute('data-item-id');
                // Load state from local storage
                if (localStorage.getItem(`checklist-item-${itemId}`) === 'checked') {
                    checkbox.classList.add('checked');
                }

                checkbox.addEventListener('click', (e) => {
                    // Prevent accordion toggle when clicking checkbox itself
                    e.stopPropagation();
                    checkbox.classList.toggle('checked');
                    // Save state to local storage
                    if (checkbox.classList.contains('checked')) {
                        localStorage.setItem(`checklist-item-${itemId}`, 'checked');
                    } else {
                        localStorage.removeItem(`checklist-item-${itemId}`);
                    }
                    updateProgress(); // Update progress bar on check/uncheck
                });

                // Allow clicking the item title/content to check the box too
                const itemContent = checkbox.closest('.checklist-item').querySelector('.item-content');
                 if(itemContent){
                     itemContent.style.cursor = 'pointer'; // Indicate clickable area
                     itemContent.addEventListener('click', () => {
                         checkbox.click(); // Trigger checkbox click programmatically
                     });
                 }
            });

            // Initial progress bar update
            updateProgress();

            // Scroll animation for sections
             const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                rootMargin: '0px',
                threshold: 0.1
            });

            sections.forEach(section => {
                observer.observe(section);
            });

        });
    </script>

</body>
</html>
